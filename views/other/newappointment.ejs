<%- include('include/header') %>
    <form action="/api/appointments" method="post" name="addcases" id="addcases">
        <select name="attorney">
            <option selected disabled hidden>Select attorney</option>
            <% users.forEach((users)=> { %>
                <option value="<%= users.username %>">
                    <%= users.username%>
                </option>
                <% }) %>
        </select>
        <input type="hidden" name="client" value="<%= firstperson.username %>" required>
        <input type="datetime-local" name="date" required>
        <textarea name="description" id="description" placeholder="Description"></textarea>
        <input type="submit" value="Submit">
    </form>
    <%- include('include/footer') %>